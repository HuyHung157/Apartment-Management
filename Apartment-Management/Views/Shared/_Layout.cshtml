<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý chung cư ABC</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/Site.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/sidebar.css" rel="stylesheet" type='text/css' />
    <link href="~/Content/css/main.css" rel="stylesheet" type='text/css' />
    <link href="~/Content/css/form.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/table.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/common.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Quản lý chung cư ABC</h3>
                <strong>ABC</strong>
            </div>

            <button type="button" id="sidebarCollapse" class="btn btn-info">
                <i class="fa fa-chevron-left"></i>
            </button>

            <ul class="list-unstyled components">
                <li>
                    <a href="@Url.Action("Index", "Home")"> <i class="fa fa-home"></i> Home </a>
                </li>
                <li>
                    <a href="#locationSubmenu" data-toggle="collapse" aria-expanded="false">
                        <i class="fas fa-location-arrow"></i>
                        Địa điểm
                    </a>
                    <ul class="collapse list-unstyled" id="locationSubmenu">
                        <li><a href="@Url.Action("Index", "Branches")"><i class="fa fa-code-branch"></i>Chi nhánh</a></li>
                        <li><a href="@Url.Action("Index", "Buildings")"> <i class="far fa-building"></i> Tòa nhà</a></li>
                        <li><a href="@Url.Action("Index", "Apartments")"><i class="fas fa-door-closed"></i>Căn hộ</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#accountSubmenu" data-toggle="collapse" aria-expanded="false">
                        <i class="fa fa-file"></i>
                        Tài khoản
                    </a>
                    <ul class="collapse list-unstyled" id="accountSubmenu">
                        <li><a href="@Url.Action("Index", "Users")"><i class="fa fa-user"></i>Cư dân</a></li>
                        <li><a href="@Url.Action("Index", "Employees")"><i class="fa fa-user-cog"></i>Nhân viên</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#serviceSubmenu" data-toggle="collapse" aria-expanded="false">
                        <i class="fa fa-hand-holding-heart"></i>
                        Dịch vụ
                    </a>
                    <ul class="collapse list-unstyled" id="serviceSubmenu">
                        <li><a href="@Url.Action("Index", "ServiceDetails")"><i class="fa fa-clipboard-list"></i>Hóa đơn</a></li>
                        <li><a href="@Url.Action("Index", "ServiceTypes")"><i class="fa fa-list-ul"></i>Loại dịch vụ</a></li>
                    </ul>
                </li>
                <li> <a href="@Url.Action("Index", "Profile")"> <i class="fas fa-cog"></i> Thông tin cá nhân </a> </li>
            </ul>
        </nav>

        <!-- Page Content Holder -->
        <div id="content">
            <div class="content__container h-100 d-flex flex-column">

                <div class="main-content" style="flex: 1">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <span> Xin chào, <strong>  @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest" ) </strong>  </span>
                                <a href="@Url.Action("Signout", "Login")">
                                    <i class="mr-2 far fa-arrow-alt-circle-left"></i>
                                    Đăng xuất
                                </a>
                            }

                        </div>
                    </nav>
                    @RenderBody()

                </div>

                <footer class="text-center">
                    <p class="copyright text-center">&copy; @DateTime.Now.Year - Nhóm 16</p>
                    <ul class="team-list list-group text-left">
                        <li class="list-group-item w-100">Trần Huy Hùng - 1651012074</li>
                        <li class="list-group-item">Nguyễn Thị Quỳnh Như - 1854050080</li>
                    </ul>
                </footer>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/Content/js/sidebar.js"></script>
    <script src="~/Content/js/modal.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
